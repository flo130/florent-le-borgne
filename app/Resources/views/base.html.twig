<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Site{% endblock %}</title>
        {% block stylesheets %}
            {% stylesheets filter='cssrewrite'
                '//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/css/bootstrap.min.css'
                '//cdnjs.cloudflare.com/ajax/libs/jasny-bootstrap/3.1.3/css/jasny-bootstrap.css'
                '//cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.4/css/bootstrap-datepicker3.min.css'
                '//cdnjs.cloudflare.com/ajax/libs/animate.css/3.5.2/animate.min.css'
            %}
                <link rel="stylesheet" href="{{ asset_url }}">
            {% endstylesheets %}
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('bundles/app/images/favicon.ico') }}" />
    </head>
    <body>
        {# menu canvas #}
        <nav class="navmenu navmenu-default navmenu-fixed-left offcanvas">
            <a class="navmenu-brand" href="{{ path('homepage') }}">Brand</a>
            <ul class="nav navmenu-nav">
                <li{% if app.request.attributes.get('_route') == 'search' %} class="active"{% endif %}>
                    <a href="{{ path('search') }}">Search articles</a>
                </li>
                {% if is_granted('ROLE_USER') %}
                    <li{% if app.request.attributes.get('_route') == 'article_create' %} class="active"{% endif %}>
                        <a href="{{ path('article_create') }}">Create an article</a>
                    </li>
                {% endif %}
            </ul>
            <ul class="nav navmenu-nav">
                {% if is_granted('ROLE_USER') %}
                    <li{% if app.request.attributes.get('_route') == 'user_account' %} class="active"{% endif %}>
                        <a href="{{ path('user_account', { name: app.user.name }) }}">
                            <span class="glyphicon glyphicon-user" aria-hidden="true"></span> {{ app.user.name }}
                        </a>
                    </li>
                    <li>
                        <a href="{{ path('user_logout') }}">
                            <span class="glyphicon glyphicon-log-out" aria-hidden="true"></span> Logout
                        </a>
                    </li>
                {% else %}
                    <li{% if app.request.attributes.get('_route') == 'user_register' %} class="active"{% endif %}>
                        <a href="{{ path('user_register') }}">
                            <span class="glyphicon glyphicon-user" aria-hidden="true"></span> Register
                        </a>
                    </li>
                    <li{% if app.request.attributes.get('_route') == 'user_login' %} class="active"{% endif %}>
                        <a href="{{ path('user_login') }}">
                            <span class="glyphicon glyphicon-log-in" aria-hidden="true"></span> Login
                        </a>
                    </li>
                {% endif %}
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Languages <span class="caret"></span></a>
                    <ul class="dropdown-menu navmenu-nav">
                        <li{% if app.request.getLocale() == 'fr' %} class="active"{% endif %}>
                            <a{% if app.request.getLocale() != 'fr' %} href="{{ absolute_url(path('locale_change', { 'locale':'fr' })) }}" class="change-locale"{% endif %}>Français</a>
                        </li>
                        <li{% if app.request.getLocale() == 'en' %} class="active"{% endif %}>
                            <a{% if app.request.getLocale() != 'en' %} href="{{ absolute_url(path('locale_change', { 'locale':'en' })) }}" class="change-locale"{% endif %}>English</a>
                        </li>
                    </ul>
                </li>
            </ul>
        </nav>
        {# menu classique #}
        <div class="navbar navbar-default navbar-static-top">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle pull-left visible-xs-block" data-toggle="offcanvas" data-target=".navmenu" data-canvas="body">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="{{ path('homepage') }}">Brand</a>
                </div>
                <div class="collapse navbar-collapse" id="navbar-collapse">
                    <ul class="nav navbar-nav">
                        <li{% if app.request.attributes.get('_route') == 'search' %} class="active"{% endif %}>
                            <a href="{{ path('search') }}">Search articles</a>
                        </li>
                        {% if is_granted('ROLE_USER') %}
                            <li{% if app.request.attributes.get('_route') == 'article_create' %} class="active"{% endif %}>
                                <a href="{{ path('article_create') }}">Create an article</a>
                            </li>
                        {% endif %}
                    </ul>
                    <form class="navbar-form navbar-left">
                    </form>
                    <ul class="nav navbar-nav navbar-right">
                        {% if is_granted('ROLE_USER') %}
                            <li{% if app.request.attributes.get('_route') == 'user_account' %} class="active"{% endif %}>
                                <a href="{{ path('user_account', { name: app.user.name }) }}">
                                    <span class="glyphicon glyphicon-user" aria-hidden="true"></span> {{ app.user.name }}
                                </a>
                            </li>
                            <li>
                                <a href="{{ path('user_logout') }}">
                                    <span class="glyphicon glyphicon-log-out" aria-hidden="true"></span> Logout
                                </a>
                            </li>
                        {% else %}
                            <li{% if app.request.attributes.get('_route') == 'user_register' %} class="active"{% endif %}>
                                <a href="{{ path('user_register') }}">
                                    <span class="glyphicon glyphicon-user" aria-hidden="true"></span> Register
                                </a>
                            </li>
                            <li{% if app.request.attributes.get('_route') == 'user_login' %} class="active"{% endif %}>
                                <a href="{{ path('user_login') }}">
                                    <span class="glyphicon glyphicon-log-in" aria-hidden="true"></span> Login
                                </a>
                            </li>
                        {% endif %}
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Languages <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li{% if app.request.getLocale() == 'fr' %} class="active"{% endif %}>
                                    <a{% if app.request.getLocale() != 'fr' %} href="{{ absolute_url(path('locale_change', { 'locale':'fr' })) }}" class="change-locale"{% endif %}>Français</a>
                                </li>
                                <li{% if app.request.getLocale() == 'en' %} class="active"{% endif %}>
                                    <a{% if app.request.getLocale() != 'en' %} href="{{ absolute_url(path('locale_change', { 'locale':'en' })) }}" class="change-locale"{% endif %}>English</a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        {# contenu de la page #}
        <div class="container">
            {% block body %}{% endblock %}
        </div>
        {# footer #}
        <footer class="container-fluid">
            <div class="row">
                <div class="col-md-10 col-md-offset-1">
                    <hr>
                    <p class="text-center">Version {{ appversion }}</p>
                </div>
            </div>
        </footer>
        {# alertes #}
        <div class="alert alert-success alert-dismissible alert-fixed-bottom hide">
            <button type="button" class="close close-alert"><span aria-hidden="true">&times;</span></button>
            <div class="alert-content"></div>
        </div>
        <div class="alert alert-danger alert-dismissible alert-fixed-bottom hide">
            <button type="button" class="close close-alert"><span aria-hidden="true">&times;</span></button>
            <div class="alert-content"></div>
        </div>
        {% block javascripts %}
            {% javascripts
                '//cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.min.js'
                '//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/js/bootstrap.min.js'
                '//cdnjs.cloudflare.com/ajax/libs/jasny-bootstrap/3.1.3/js/jasny-bootstrap.min.js'
                '//cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.4/js/bootstrap-datepicker.min.js'
                '//cdn.rawgit.com/google/code-prettify/master/loader/run_prettify.js?skin=sons-of-obsidian'
                '@js_app'
            %}
                <script src="{{ asset_url }}"></script>
            {% endjavascripts %}
            {# messages #}
            {% for msg in app.session.flashBag.get('success') %}
                <script type="text/javascript">showSuccessMessage('{{ msg|e('js')  }}');</script>
            {% endfor %}
            {% for msg in app.session.flashBag.get('error') %}
                <script type="text/javascript">showErrorMessage('{{ msg|e('js')  }}');</script>
            {% endfor %}
        {% endblock %}
    </body>
</html>
