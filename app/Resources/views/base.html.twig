<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Site{% endblock %}</title>
        {% block stylesheets %}
            {% stylesheets filter='cssrewrite'
                '//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/css/bootstrap.min.css'
                '//cdnjs.cloudflare.com/ajax/libs/jasny-bootstrap/3.1.3/css/jasny-bootstrap.css'
                '//cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.4/css/bootstrap-datepicker3.min.css'
                '//cdnjs.cloudflare.com/ajax/libs/animate.css/3.5.2/animate.min.css'
            %}
                <link rel="stylesheet" href="{{ asset_url }}">
            {% endstylesheets %}
        {% endblock %}
        <link rel="apple-touch-icon" sizes="57x57" href="{{ asset('bundles/app/images/favicon/apple-icon-57x57.png') }}">
        <link rel="apple-touch-icon" sizes="60x60" href="{{ asset('bundles/app/images/favicon/apple-icon-60x60.png') }}">
        <link rel="apple-touch-icon" sizes="72x72" href="{{ asset('bundles/app/images/favicon/apple-icon-72x72.png') }}">
        <link rel="apple-touch-icon" sizes="76x76" href="{{ asset('bundles/app/images/favicon/apple-icon-76x76.png') }}">
        <link rel="apple-touch-icon" sizes="114x114" href="{{ asset('bundles/app/images/favicon/apple-icon-114x114.png') }}">
        <link rel="apple-touch-icon" sizes="120x120" href="{{ asset('bundles/app/images/favicon/apple-icon-120x120.png') }}">
        <link rel="apple-touch-icon" sizes="144x144" href="{{ asset('bundles/app/images/favicon/apple-icon-144x144.png') }}">
        <link rel="apple-touch-icon" sizes="152x152" href="{{ asset('bundles/app/images/favicon/apple-icon-152x152.png') }}">
        <link rel="apple-touch-icon" sizes="180x180" href="{{ asset('bundles/app/images/favicon/apple-icon-180x180.png') }}">
        <link rel="icon" type="image/png" sizes="192x192"  href="{{ asset('bundles/app/images/favicon/android-icon-192x192.png') }}">
        <link rel="icon" type="image/png" sizes="32x32" href="{{ asset('bundles/app/images/favicon/favicon-32x32.png') }}">
        <link rel="icon" type="image/png" sizes="96x96" href="{{ asset('bundles/app/images/favicon/favicon-96x96.png') }}">
        <link rel="icon" type="image/png" sizes="16x16" href="{{ asset('bundles/app/images/favicon/favicon-16x16.png') }}">
        <link rel="manifest" href="/manifest.json">
        <meta name="msapplication-TileColor" content="#ffffff">
        <meta name="msapplication-TileImage" content="{{ asset('bundles/app/images/favicon/ms-icon-144x144.png') }}">
        <meta name="theme-color" content="#ffffff">
    </head>
    <body>
        {# menu canvas #}
        {% block menu_canvas %}
            {% include '::menu_canvas.html.twig' %}
        {% endblock %}

        {# menu full screen #}
        {% block menu %}
            {% include '::menu.html.twig' %}
        {% endblock %}

        {# contenu de la page #}
        <div class="container">
            {% block body %}{% endblock %}
        </div>

        {# footer #}
        {% block footer %}
            {% include '::footer.html.twig' %}
        {% endblock %}

        {# messages #}
        {% block messages %}
            {% include '::alerts.html.twig' %}
        {% endblock %}

        {# js #}
        {% block javascripts %}
            {% javascripts
                '//cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.min.js'
                '//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/js/bootstrap.min.js'
                '//cdnjs.cloudflare.com/ajax/libs/jasny-bootstrap/3.1.3/js/jasny-bootstrap.min.js'
                '//cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.4/js/bootstrap-datepicker.min.js'
                '//cdn.rawgit.com/google/code-prettify/master/loader/run_prettify.js?skin=sons-of-obsidian'
                '@js_app'
            %}
                <script src="{{ asset_url }}"></script>
            {% endjavascripts %}
            {% for msg in app.session.flashBag.get('success') %}
                <script type="text/javascript">showSuccessMessage('{{ msg|e('js')  }}');</script>
            {% endfor %}
            {% for msg in app.session.flashBag.get('error') %}
                <script type="text/javascript">showErrorMessage('{{ msg|e('js')  }}');</script>
            {% endfor %}
        {% endblock %}
    </body>
</html>
