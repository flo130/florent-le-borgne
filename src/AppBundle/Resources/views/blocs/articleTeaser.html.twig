{#
    params : 
        - article : Article object
        - printArticleImage : boolean
#}
<h2>
    <a href="{{ path('article_show', { 'slug' : article.slug }) }}">
        {{ article.title }}
    </a>
</h2>
{# si l'utilisateur peut Ã©diter ou supprimer l'article, on lui affiche le lien vers la page #}
<div class="pull-right">
    <a class="btn btn-default" href="{{ path('article_create') }}" role="button" data-toggle="tooltip" data-placement="top" title="{{ 'app.create_article' | trans | capitalize }}">
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
    </a>
    {% if is_granted('edit', article) %}
        <a class="btn btn-default" href="{{ path('article_edit', { 'slug' : article.slug }) }}" role="button" data-toggle="tooltip" data-placement="top" title="{{ 'app.edit' | trans | capitalize }}">
            <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
        </a>
    {% endif %}
    {% if is_granted('delete', article) %}
        <a class="btn btn-danger print-confirm" href="{{ path('article_delete', { 'slug' : article.slug }) }}" role="button" data-toggle="tooltip" data-placement="top" title="{{ 'app.delete' | trans | capitalize }}">
            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
        </a>
    {% endif %}
</div>
<p class="lead">
    {% if article.user.avatar %}
        <img class="img-thumbnail img-responsive lazy" data-src="{{ asset(article.user.avatar) }}" alt="{{ article.user.name }}" width="80px">
    {% else %}
        <img class="img-thumbnail img-responsive lazy" data-src="{{ asset('bundles/app/images/defaultAvatar.png') }}" alt="{{ article.user.name }}" width="80px">
    {% endif %}
    {{ 'app.by' | trans | capitalize }} <a href="{{ path('user_account', { 'slug' : article.user.slug }) }}">{{ article.user.name }}</a>
</p>
<p>
    <span class="glyphicon glyphicon-time"></span> {{ 'app.posted' | trans | capitalize }} {{ article.createdAt | ago }}
    <br>
    <span class="glyphicon glyphicon-edit"></span> {{ 'app.last_edit' | trans | capitalize }} {{ article.updatedAt | ago }}
</p>
{% if printArticleImage == true %}
    <img class="img-thumbnail img-responsive lazy" data-src="{{ asset(article.image) }}" alt="{{ article.title }}" width="100%">
{% endif %}
<p>
    {{ article.summary }}
</p>
<a class="btn btn-primary" href="{{ path('article_show', { 'slug' : article.slug }) }}">
    {{ 'app.read_more' | trans | capitalize }}
</a>