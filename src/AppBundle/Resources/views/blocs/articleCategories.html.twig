{#
    params : 
        - categories : array of ArticleCategory object
#}
<div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
    {% for category in categories %}
        <div class="panel panel-default">
            <div class="panel-heading" role="tab" id="headingOne">
                <h4 class="panel-title">
                    <a role="button" data-toggle="collapse" data-parent="#accordion" href="#collapse{{ loop.index }}" aria-expanded="true" aria-controls="collapseOne">
                        {{ category.articleCategory | capitalize }}
                    </a>
                </h4>
            </div>
            <div id="collapse{{ loop.index }}" class="panel-collapse collapse" role="tabpanel" aria-labelledby="heading{{ loop.index }}">
                <div class="panel-body">
                    <ul>
                        {% for subCategory in category.articleSubCategories %}
                            <li><a href="{{ path('article_by_sub_category', { 'id' : subCategory.id }) }}">{{ subCategory.articleSubCategory | capitalize }}</a></li>
                        {% else %}
                            {{ 'app.no_data.category' | trans | capitalize }}
                        {% endfor %}
                   </ul>
               </div>
           </div>
       </div>
    {% else %}
        {{ 'app.no_data.category' | trans | capitalize }}
    {% endfor %}
</div>