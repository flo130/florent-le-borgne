{% extends '::base.html.twig' %}
{% block title %}
    {{ parent() }} - {{ 'app.global.login' | trans }}
{% endblock %}
{% block body %}
    <h2>{{ 'app.global.login' | trans }}</h2>
    <div class="row">
        <div class="col-md-8 col-md-offset-2{% if error %} animated shake{% endif %}">
            <div class="well">
                {% include 'AppBundle:forms:loginForm.html.twig' with { 'error' : error, 'form' : form } %}
            </div>
        </div>
    </div>
{% endblock %}