{% extends '::base.html.twig' %}

{% block title %}
    {{ parent() }} - {{ 'app.user.login' | trans | capitalize }}
{% endblock %}

{% block body %}
    <h2 class="text-center">{{ 'app.user.login' | trans | capitalize }}</h2>
    <section class="row">
        <div class="col-md-4 col-md-offset-4{% if error %} animated shake{% endif %}">
            <div class="well">
                {% include 'AppBundle:forms:loginForm.html.twig' with { 'error' : error, 'form' : form } %}
            </div>
        </div>
    </section>
{% endblock %}