{#
    params : 
        - articles : array of Article object
#}
{% extends '::base.html.twig' %}
{% block title %}
    {{ parent() }} - {{ 'app.admin.search.article' | trans | capitalize }}
{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-md-12">
            <ol class="breadcrumb">
                <li>
                    <a href="{{ path('admin') }}">{{ 'app.admin.admin' | trans | capitalize }}</a>
                </li>
                <li class="active">
                    {{ 'app.admin.search.article' | trans | capitalize }}
                </li>
            </ol>
        </div>
    </div>
    <h1>{{ 'app.admin.search.article' | trans | capitalize }}</h1>
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-addon"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></div>
                    <input type="text" class="form-control table-search" data-table-search="articles" id="table-search" placeholder="{{ 'app.admin.search.article' | trans | capitalize }}">
                </div>
            </div>
            <table class="table table-condensed table-hover table-bordered" id="articles">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>{{ 'app.title' | trans | capitalize }}</th>
                        <th>{{ 'app.status' | trans | capitalize }}</th>
                        <th>{{ 'app.by' | trans | capitalize }}</th>
                        <th>{{ 'app.action' | trans | capitalize }}</th>
                    </tr>
                </thead>
                <tbody>
                    {% for article in articles %}
                        <tr>
                            <td>{{ article.id }}</td>
                            <td>{{ article.title }}</td>
                            <td>
                                {% if article.status == 1 %}
                                    <div class="text-center">
                                        <span class="glyphicon glyphicon-film" aria-hidden="true"></span>
                                    </div>
                                {% endif %}
                            </td>
                            <td>{{ article.user.name }}</td>
                            <td>
                                <a href="{{ path('admin_article_edit', { 'slug' : article.slug }) }}">{{ 'app.edit' | trans | capitalize }}</a>&nbsp;
                                <a href="{{ path('article_show', { 'slug' : article.slug }) }}">{{ 'app.see' | trans | capitalize }}</a>&nbsp;
                                <a href="{{ path('admin_article_delete', { 'slug' : article.slug }) }}">{{ 'app.delete' | trans | capitalize }}</a>
                            </td>
                        </tr>
                    {% else %}
                        {{ 'app.no_data.article' | trans | capitalize }}
                        <hr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}