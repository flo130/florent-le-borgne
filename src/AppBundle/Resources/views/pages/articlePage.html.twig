{#
    params : 
        - articles : Article object
        - commentForm : CommentForm object
#}
{% extends '::base.html.twig' %}

{% block title %}
    {{ parent() }} - {{ article.title }}
{% endblock %}

{% block description %}
    {{ parent() }} - {{ article.title }}
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <ol class="breadcrumb">
                <li>
                    <a href="{{ path('homepage') }}">{{ 'app.home' | trans | capitalize }}</a>
                </li>
                {% for category in categories %}
                    <li>
                        <a href="{{ path('article_by_category', { 'slug' : category.slug }) }}">{{ category.title | capitalize }}</a>
                    </li>
                {% endfor %}
                <li class="active">
                    {{ article.title | capitalize }}
                </li>
            </ol>
        </div>
    </div>
    <section class="row">
        <div class="col-md-12">
            {% include 'AppBundle:blocs:articleDetail.html.twig' with { 'article' : article } %}
        </div>
    </section>
    <hr>
    <div class="row">
        <div class="col-md-12">
            <h4>{{ 'app.comment' | trans | capitalize }}{% if article.articleComments|length > 1 %}s{% endif %}</h4>
            <div id="comments">
                {% if article.articleComments|length < 1 %}
                    {{ 'app.no_data.comment' | trans | capitalize }}
                {% endif %}
                {# Pas besoin de charger le bloc des commentaires ici, car il sera chargÃ© en ajax via le script react inclus plus bas #}
                {# include 'AppBundle:blocs:articleCommentForArticle.html.twig' with { 'comments' : article.articleComments } #}
            </div>
            {% if is_granted('ROLE_MEMBRE') %}
                <div class="well">
                    <h4>{{ 'app.leave_a' | trans | capitalize }} {{ 'app.comment' | trans | capitalize }}</h4>
                    {% include 'AppBundle:forms:articleCommentForm.html.twig' with { 
                        'form' : commentForm,
                        'article' : article
                    } %}
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts
        '//cdnjs.cloudflare.com/ajax/libs/react/0.14.3/react.js'
        '//cdnjs.cloudflare.com/ajax/libs/react/0.14.3/react-dom.js'
        '//cdnjs.cloudflare.com/ajax/libs/babel-core/5.8.23/browser.min.js'
    %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
    <script type="text/babel" src="{{ asset('/bundles/app/js/articleComment.react.js') }}"></script>
    <script type="text/babel">
        var commentUrl = '{{ path('get_article_comment', { 'id' : article.id }) }}';
        ReactDOM.render(
            <CommentSection url={commentUrl} />,
            document.getElementById('comments')
        );
    </script>
{% endblock %}
