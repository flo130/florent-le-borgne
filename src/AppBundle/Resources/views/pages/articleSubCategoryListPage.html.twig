{#
    params : 
        - articleSubCategory : ArticleSubCategory object (sous catégorie en cours)
        - articles : array of Articles object
        - categories : array of ArticleCategory object (toutes les catégories)
#}
{% extends '::base.html.twig' %}

{% block title %}
    {{ parent() }} - {{ articleSubCategory.articleSubCategory }}
{% endblock %}

{% block description %}
    {{ parent() }} - {{ articleSubCategory.articleSubCategory }}
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <ol class="breadcrumb">
                <li>
                    <a href="{{ path('homepage') }}">{{ 'app.home' | trans | capitalize }}</a>
                </li>
                <li>
                    <a href="{{ path('article_by_category', { 'id' : articleSubCategory.articleCategory.id }) }}">{{ articleSubCategory.articleCategory.articleCategory }}</a>
                </li>
                <li class="active">
                    {{ articleSubCategory.articleSubCategory }}
                </li>
            </ol>
        </div>
    </div>
    <div class="row">
        <section class="col-md-8">
            <h1>{{ 'app.articles' | trans | capitalize }} {{ articleSubCategory.articleSubCategory }}</h1>
            {% for article in articles %}
                <div class="row">
                    <div class="col-md-12">
                        {% include 'AppBundle:blocs:articleTeaser.html.twig' with {
                            'article' : article,
                            'printArticleImage' : true
                        } %}
                        {% if not loop.last %}<hr>{% endif %}
                    </div>
                </div>
            {% else %}
                {{ 'app.no_data.article' | trans | capitalize }}
                <hr>
            {% endfor %}
        </section>
        <section class="col-md-4">
            <div class="well">
                <h4>{{ 'app.categories' | trans | capitalize }}</h4>
                {% include 'AppBundle:blocs:articleCategories.html.twig' with { 'categories' : categories } %}
            </div>
        </section>
    </div>
{% endblock %}