{#
    params : 
        - form : UserForm object
#}
{{ form_start(form) }}
    <div class="form-group{% if form_errors(form.avatar) %} has-error{% endif %}">
        {{ form_label(form.avatar) }}
        <div class="fileinput fileinput-new" data-provides="fileinput">
            <div class="fileinput-preview thumbnail" data-trigger="fileinput" style="width: 200px; height: 150px;">
                {% if form.vars.value is not empty and form.vars.value.avatar is not empty %}
                    <img class="lazy" data-src="{{ asset('uploads/' ~ form.vars.value.avatar) }}">
                {% endif %}
            </div>
            <div>
                <span class="btn btn-default btn-file">
                    <span class="fileinput-new">{{ 'app.select' | trans | capitalize }}</span>
                    <span class="fileinput-exists">{{ 'app.change' | trans | capitalize }}</span>
                    {{ form_widget(form.avatar) }}
                </span>
                <a href="#" class="btn btn-default fileinput-exists" data-dismiss="fileinput">{{ 'app.remove' | trans | capitalize }}</a>
            </div>
        </div>
        {{ form_errors(form.avatar) }}
    </div>
    {{ form_row(form.email) }}
    {{ form_row(form.name) }}
    {{ form_row(form.plainPassword) }}
    <button class="btn btn-primary" type="submit" formnovalidate>{{ 'app.submit' | trans | capitalize }}</button>
{{ form_end(form) }}


