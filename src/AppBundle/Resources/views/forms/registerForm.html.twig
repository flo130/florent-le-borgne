{#
    params : 
        - form : RegistrationForm object
#}
{{ form_start(form) }}
    {{ form_row(form.email) }}
    {{ form_row(form.plainPassword.first, { 'label': 'Password' }) }}
    {{ form_row(form.plainPassword.second, { 'label': 'Repeat Password' }) }}
    <button class="btn btn-primary" type="submit">{{ 'app.global.register' | trans }}</button>
    <a href="{{ path('user_login') }}">{{ 'app.global.already_have_account' | trans }}</a>
{{ form_end(form) }}