{#
    params : 
        - form : RegistrationForm object
#}
{{ form_start(form) }}
    {{ form_row(form.email) }}
    {{ form_row(form.plainPassword.first, { 'label' : 'Password' }) }}
    {{ form_row(form.plainPassword.second, { 'label' : 'Repeat Password' }) }}
    {{ form_row(form.recaptcha) }}
    <p class="pull-right">
        <a href="{{ url('user_login') }}">{{ 'app.user.already_have_account' | trans | capitalize }}</a>
    </p>
    <button class="btn btn-block btn-primary" type="submit">{{ 'app.user.register' | trans | capitalize }}</button>
{{ form_end(form) }}