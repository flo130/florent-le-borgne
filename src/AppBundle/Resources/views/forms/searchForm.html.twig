{#
    params : 
        - form : SearchForm object
#}
{{ form_start(form, { 
    'attr': { 
        'class' : 'form-inline',
        'role' : 'form' 
    },
    'action' : path('search')
}) }}
    <div class="input-group">
        {{ form_widget(form.term) }}
        <span class="input-group-btn">
            <button type="submit" class="btn btn-default">
                <span class="glyphicon glyphicon-search"></span>
            </button>
        </span>
    </div>
{{ form_end(form) }}